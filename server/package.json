{
  "name": "auto-server",
  "version": "1.0.0",
  "description": "Backend of auto service",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "run:watch": "nodemon --inspect=0.0.0.0:9080 ./dist/server.js --watch ./dist",
    "dev": "npm-run-all --parallel build:watch run:watch",
    "start": "tsc && node ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
    "lint": "npx eslint --ignore-path .gitignore --ext .ts ./src",
  },
  "author": "Pogudin Sergey",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "loglevel": "^1.9.1",
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
